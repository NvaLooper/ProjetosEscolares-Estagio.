#ConfiguraÃ§Ã£o do programa:
import time
import sys
#DefiniÃ§Ã£o das funÃ§Ãµes:
def calculo_temp():
    #ConversÃ£o de segundos para minutos
    global temp_minutos
    temp_minutos = minutos*60
def cronometro():
    #FunÃ§Ã£o responsÃ¡vel pelo cronometro
    for x in range(temp_minutos,0,-1):
        segundos = x % 60
        minutoss = int (x/60) % 60
        horas = int(x / 3600)
        print(f"{horas:02}:{minutoss:02}:{segundos:02}")
        time.sleep(1)
def beber():
    #FunÃ§Ã£o responsÃ¡vel pela repetiÃ§Ã£o do cronometro
    while True:
        print("\n!!! ğŸ’§ HORA DE BEBER ÃGUA ğŸ’§ !!!")
        beber = input("VocÃª bebeu Ã¡gua?\n")
