#Configura√ß√£o do programa:
import time
import sys
#Defini√ß√£o das fun√ß√µes:
def calculo_temp():
    #Convers√£o de segundos para minutos
    global temp_minutos
    temp_minutos = minutos*60
def cronometro():
    #Fun√ß√£o respons√°vel pelo cronometro
    for x in range(temp_minutos,0,-1):
        segundos = x % 60
        minutoss = int (x/60) % 60
        horas = int(x / 3600)
        print(f"{horas:02}:{minutoss:02}:{segundos:02}")
        time.sleep(1)
#Inc√≠cio do programa:
minutos = 0
while True:
    print("\n1 - Come√ßar contador\n2 - Op√ß√µes\n3 - Finalizar programa")
    try:
        menu = int(input("\nO que voc√™ deseja fazer: "))
    except(ValueError,NameError,SyntaxError):
        print("\n‚ùå Op√ß√£o inv√°lida ‚ùå\nEscolha uma op√ß√£o v√°lida:")
    else:
        if menu == 3:
            sys.exit("\nObrigado por usar o programa <3\n")
        if menu == 2:
            while True:
                print("\n‚ãÆ 1 - 5 minutos ‚ãÆ 2 - 10 minutos ‚ãÆ 3 - 15 minutos ‚ãÆ\n\n4 - Definir manualmente um tempo\n5 - Voltar ao menu\n")
                try:
                    Escolha_tempo = int(input("Escolha uma das op√ß√µes: "))
                except(ValueError,NameError,SyntaxError):
                    print("\n‚ùå A op√ß√£o escolhida √© inv√°lida ‚ùå\nTente novamente...")
                else:
                    if Escolha_tempo == 1:
                        minutos = 5
                        calculo_temp()
                        break
                    elif Escolha_tempo == 2:
                        minutos = 10
                        calculo_temp()
                        break
                    elif Escolha_tempo == 3:
                        minutos = 15
                        calculo_temp()
                        break
                    elif Escolha_tempo == 4:
                        minutos = int(input("Minutos:"))
                        calculo_temp()
                        break
                    elif Escolha_tempo == 5:
                        minutos = 3
                        temp_minutos = minutos
                        break
                    else:
                        print("\n‚ùå A op√ß√£o escolhida √© inv√°lida ‚ùå\nTente novamente...")
        if menu == 1:
            if minutos <=0:
                print("\nN√∫mero inv√°lido, voc√™ deve selecionar um n√∫mero nas op√ß√µes antes de come√ßar o contador")
            elif minutos>0:
                cronometro()
                while True:
                    print("\n!!! üíß HORA DE BEBER √ÅGUA üíß !!!")
                    beber = input("Voc√™ bebeu √°gua?\n")
                    bebermin = beber.lower()
                    if bebermin == "sim" or bebermin == "s":
                        novamente = int(input("\nGostaria de come√ßar o contador novamente?\n1 - Sim\n2 - N√£o\nEscolha uma das op√ß√µes: "))
                        if novamente == 1:
                            cronometro()
                        elif novamente == 2:
                            break
                        else:
                            print("\n‚ùå Escolha n√∫meros v√°lidos ‚ùå\n")
                    else:
                        print("---> !!! Ent√£o beba √°gua !!! <---\nResponda com SIM(S) se voc√™ j√° bebeu √°gua...\n")
