from time import sleep
import sys
minutos = 0
intervalo = 1
while True:
    print("\n1 - Come√ßar contador\n2 - Op√ß√µes\n3 - Finalizar programa")
    menu = int(input("\nO que voc√™ deseja fazer: "))
    if menu == 3:
        sys.exit("\nObrigado por usar o programa <3\n")
    elif menu == 2:
        print("\n1 - 5 minutos\n2 - 10 minutos\n3 - 15 minutos\n4 - Definir manualmente um tempo\n")
        Escolha_tempo = int(input("Escolha uma das op√ß√µes: "))
        if Escolha_tempo == 1:
            minutos = 5
        elif Escolha_tempo == 2:
            minutos = 10
        elif Escolha_tempo == 3:
            minutos = 15
        elif Escolha_tempo == 4:
            minutos = float(input("Minutos:"))
        elif Escolha_tempo == 5:
            minutos = 0.0166
    if menu == 1:
        tempo = minutos*60
        if tempo <=0:
            print("\nN√∫mero inv√°lido, voc√™ deve selecionar um n√∫mero nas op√ß√µes antes de come√ßar o contador")
        elif tempo>0:
            while True:
                print(tempo)
                tempo-=intervalo
                sleep(intervalo)
                if tempo == 0 or tempo <=0:
                    print("\n!!! üíß HORA DE BEBER √ÅGUA üíß !!!")
                    beber = input("\nVoc√™ bebeu √°gua?\n")
                    bebermin = beber.lower()
                    if bebermin == "sim" or bebermin == "s":
                        novamente = int(input("\nGostaria de come√ßar o contador novamente?\n1 - Sim\n2 - N√£o\nEscolha uma das op√ß√µes: "))
                        if novamente == 1:
                            tempo = minutos*60
                            print(tempo)
                            tempo-=intervalo
                            sleep(intervalo)
                        elif novamente == 2:
                            break
                        else:
                            print("\nEscolha n√∫meros v√°lidos\n")
                    else:
                        print("Responda com SIM se bebeu √°gua.")
